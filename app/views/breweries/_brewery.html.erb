<div id="<%= dom_id brewery %>">
  <h2>
    <strong>
			<%= brewery.name %>
		</strong>
  </h2>

  <i>
		Established in
    <%= brewery.year %>
  </i>

	<p>
		Beers count: 
		<%= brewery.beers.count %>
	</p>

	<p>
		<% brewery.beers.each do |beer| %>
			<%= link_to beer.name, beer %>
		<% end %>
	</p>

	<% if brewery.ratings.empty? %>
	<% else %>
		<p>
			Brewery has <%= brewery.ratings.count %> <%= "rating".pluralize(brewery.ratings.count) %> with an average of <%= brewery.average_rating %>
		</p>
	<% end %>

</div>
