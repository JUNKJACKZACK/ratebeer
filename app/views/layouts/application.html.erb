<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
		<%= favicon_link_tag asset_path('favicon.ico') %>

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </head>

  <body>
  	<div class="nav-bar">
  		<div class="nav-brand">
  			<h2>Rate Beer</h2>
  		</div>
  		<div class="nav-menu">
  			<div class="nav-links">
		  		<%= link_to 'Breweries', breweries_path %>
		  		<%= link_to 'Beers', beers_path %>
					<%= link_to 'Ratings', ratings_path %>
					<%= link_to 'Users', users_path %>
					<%= link_to 'Beer Clubs', beer_clubs_path %>
				</div>
				|
				<div class="nav-user">
					<% if current_user %>
		  			<%= link_to current_user.username, current_user %>
						<%= link_to 'Rate a new beer', new_rating_path %>
						<%= link_to 'Join a club', new_membership_path %>
						<%= link_to 'Sign out', signout_path, data: { 'turbo-method': :delete } %>
					<% else %>
						<%= link_to 'Sign in', signin_path %>
						<%= link_to 'Sign up', signup_path %>
					<% end %>
				</div>
			</div>
  	</div>
    <%= yield %>
  </body>
</html>
