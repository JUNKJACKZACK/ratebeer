<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= beer.name %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= beer.brewery_id %>
  </p>

	<p>
		<%= link_to "Breweries", breweries_path %>
	</p>

	<% if beer.ratings.empty? %>
		Beer has not yet been rated!
	<% else %>
		Beer has <%= beer.ratings.count %> ratings with an average of <%= beer.average_rating %>
	<% end %>
</div>
